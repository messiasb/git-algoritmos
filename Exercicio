21
algoritmo "AnoBissexto"
var
    ano: inteiro
inicio
    escreva("Digite um ano: ")
    leia(ano)
    se (ano % 4 = 0 e ano % 100 <> 0) ou (ano % 400 = 0) então
        escreva("O ano é bissexto.")
    senao
        escreva("O ano não é bissexto.")
    fimse
fimalgoritmo

---------------
22
algoritmo "AlistamentoMilitar"
var
    anoNascimento, anoAtual, idade: inteiro
inicio
    escreva("Digite o ano de nascimento: ")
    leia(anoNascimento)
    anoAtual := 2024
    idade := anoAtual - anoNascimento
    se idade < 18 então
        escreva("Faltam ", 18 - idade, " anos para o alistamento.")
    senao
        escreva("Já passaram ", idade - 18, " anos desde o alistamento.")
    fimse
fimalgoritmo
