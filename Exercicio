14) Calcular Preço Total de Aluguel de Carro
algoritmo "PrecoAluguelCarro"
var
    kmPercorridos, dias, precoTotal: real
inicio
    escreva("Digite a quantidade de Km percorridos: ")
    leia(kmPercorridos)
    escreva("Digite a quantidade de dias alugados: ")
    leia(dias)
    precoTotal := (dias * 90) + (kmPercorridos * 0.20)
    escreva("Preço total a pagar: R$", precoTotal:0:2)
fimalgoritmo


